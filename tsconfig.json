{
    "compilerOptions": {
        "baseUrl": "./",
        "allowJs": true,
        "module": "commonjs",
        "noImplicitAny": true,
        "outDir": "./build/",
        "preserveConstEnums": true,
        "removeComments": true,
        "sourceMap": true,
        "target": "es6",
        "strict": true,
        "strictNullChecks": true,
        "noImplicitThis": true,
        "alwaysStrict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitReturns": true,
        "esModuleInterop": true,
        "noFallthroughCasesInSwitch": true,
    },
    "include": ["src/**/*"],
    "exclude": [ "node_modules" ]
}
